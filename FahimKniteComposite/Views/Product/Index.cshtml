@model IEnumerable<FahimKniteComposite.Models.Products>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
@if(TempData["ResultOk"] != null)
{
    <h1 class="alert-success text-center">@TempData["Success"]</h1>
}
<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <h1 class="text-center text-primary">Category List</h1>
            <a class="btn btn-primary float-right p-1 m-1" asp-action="Create" asp-controller="Product">Add Product</a>
            <table class="table table-bordered table-hover">
                <thead>
                    <tr class="text-center bg-dark text-light">
                        <th>Product ID</th>
                        <th>Catgory</th>
                        <th>Product Name</th>
                        <th>Description</th>
                        <th>Photo</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @if(Model != null)
                    {
                        @foreach (var prod in Model)
                        {
                            <tr>
                                <td>@prod.CategoryID</td>
                                <td>@prod.ProductID</td>
                                <td>@prod.ProductName</td>
                                <td>@prod.Description</td>
                                <td>
                                    <img src="@Url.Content(prod.Path)" height="100px;" width="100px;">
                                </td>
                                <td>
                                    <a class="btn btn-success" asp-action="Edit" asp-controller="Product" asp-route-id="@prod.ProductID">Edit</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@prod.ProductID">Delete</a>
                                    <a class="btn btn-warning" asp-action="Details" asp-controller="Product" asp-route-id="@prod.ProductID">Details</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




